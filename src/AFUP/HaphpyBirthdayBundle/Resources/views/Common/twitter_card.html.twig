{% spaceless %}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@{{ twitter_account }}">
{% if contribution is defined and contribution.filename and contribution.authProvider == 'twitter' %}
    <meta name="twitter:creator" content="@{{ contribution.identifier }}">
{% endif %}
<meta name="twitter:title" content="{{ twitter_card_title }}">
<meta name="twitter:description" content="{{ twitter_card_description }}">
<meta name="twitter:image" content="{{ twitter_card_image }}">
{% endspaceless %}
